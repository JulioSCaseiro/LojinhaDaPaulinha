@model LojinhaDaPaulinha.Models.Entities.Product.DisplayProductViewModel

@{
    ViewData["Title"] = "Delete product";
}

<h2><partial name="_GoBackFaIcon" /> Delete Product @Model.Name</h2>
<div>
    @* ModelState Errors - in case delete fails. *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <hr />
    <p>Are you sure you want to delete this Product?</p>

    <form asp-action="Delete">
        <button type="submit" value="@Model.Id" class="btn btn-danger">Delete</button>
    </form>
</div>
